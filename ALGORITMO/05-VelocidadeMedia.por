algoritmo
declare
nome literal
distancia numerico
thoras numerico
vmedia numerico
escreva "Digite o nome do piloto: "
leia nome
escreva "Digite a distancia(em km) percorrida deste piloto: "
leia distancia
escreva "Digite em quantas horas ele percorreu essa distancia: "
leia thoras
vmedia<-distancia/thoras
escreva "A velocidade média do " ,nome, " foi " ,vmedia, " km/h"
fim_algoritmo
